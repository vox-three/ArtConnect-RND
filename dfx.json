{
    "canisters": {
        "artconnect": {
            "type": "motoko",
            "main": "src/backend/Index.mo"
        },
        "nft": {
            "type": "motoko",
            "main": "src/backend/NFT.mo"
        },
        "merchant": {
            "type": "motoko",
            "main": "src/backend/Merchant.mo"
        },
        "artist": {
            "type": "motoko",
            "main": "src/backend/Artist.mo"
        },
        "assets": {
            "dependencies": ["artconnect"],
            "frontend": {
                "entrypoint": "dist/index.html"
            },
            "source": ["src/frontend/assets", "dist/assets"],
            "type": "assets"
        }
    },
    "defaults": {
        "build": {
            "packtool": ""
        }
    },
    "networks": {
        "local": {
            "bind": "127.0.0.1:4943",
            "type": "ephemeral"
        },
        "ic": {
            "providers": ["https://mainnet.dfinity.network"],
            "type": "persistent"
        }
    },
    "version": 1
}
